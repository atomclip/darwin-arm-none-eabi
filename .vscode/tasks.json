{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build firmware",
      "type": "shell",
      "command": "echo $PATH && echo $INCLUDE && echo $LIB",
      "options": {
        "env": {
          "PATH": "${env:PATH}:${config:arm-none-eabi.bin}",
          "INCLUDE": "${config:arm-none-eabi.include}",
          "LIB": "${config:arm-none-eabi.lib}",
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true,
      },
      "problemMatcher": "$gcc"
    }
  ]
}